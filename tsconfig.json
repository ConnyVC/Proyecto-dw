{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",                 
      "moduleResolution": "node",          
      "lib": ["ESNext"],
      "rootDir": "./src",
      "outDir": "./dist",
      "strict": false,
      "sourceMap": true,
      "esModuleInterop": true,             
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": ["src/**/*.ts"]
  }